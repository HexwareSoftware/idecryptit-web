{{> nav navFirmware=true}}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
            <!-- No TOC -->
        </div>

        <div class="col-sm-10">
            <h1>Decrypt Firmware</h1>
            <p>
                Use this form to decrypt a firmware file.
                Currently, only <a href="/fw/formats/8900">8900</a> and <a href="/fw/formats/img2">IMG2</a> files are
                supported.
            </p>
            <p class="note">
                This will <em>not</em> decrypt the <a href="/fw/files/rootFS">root filesystem</a>.
                <br>
                There is a <em>2&nbsp;<a href="https://en.wikipedia.org/wiki/Mebibyte" class="external">MiB</a></em>
                file size limit.
            </p>
            <form id="decryptForm" action="/fw/decrypt/post" method="POST">
                <div class="form-group">
                    <label for="decryptFormIV">IV</label>
                    <input type="text" class="form-control" id="decryptFormIV" required>
                </div>
                <div class="form-group">
                    <label for="decryptFormKey">Key</label>
                    <input type="text" class="form-control" id="decryptFormKey" required>
                </div>
                <div class="form-group">
                    <label for="decryptFormFile">File to decrypt</label>
                    <input type="file" class="form-control-file" id="decryptFormFile" required>
                </div>
                <button class="btn btn-primary" type="submit">Upload and decrypt</button>
            </form>
        </div>
    </div>
</div>

{{> footer}}